.label
  &.tags
  &.breadcrumbs
    grid-column: 1 / -1

  &.thumbs
    grid-column: 1 / -1
    grid-row: 6

    &.selective
      .thumb
        opacity: 0.5

        &.cursored
        &.selected
          opacity: 1

    .thumb
      &.selected
        border-color: #6cf
      &.cursored
        border-color: #ff0
      &.selected.cursored
        border-image-slice: 1
        border-image-source: repeating-linear-gradient(
            45deg, #6cf 0px, #6cf 10px, #ff0 10px, #ff0 20px)

  &.tag-select
    grid-column: 1 / -1
    grid-row: 5
    margin-left: 3em
